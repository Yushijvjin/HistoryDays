<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@drawable/default_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sliding_text_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:paddingLeft="40px"
            android:paddingTop="40px"
            android:text="看历史"
            android:textColor="#000000"
            android:textSize="50px" />

        <TextView
            android:id="@+id/sliding_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:background="#00ffffff"
            android:paddingBottom="40px"
            android:paddingRight="40px"
            android:text="                 知兴替"
            android:textColor="#000000"
            android:textSize="50px" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px" />

    <LinearLayout
        android:id="@+id/menu_one"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="40px"
            android:background="@drawable/ic_history"
            android:padding="20px" />

        <TextView
            android:id="@+id/main_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:text="历史上的今天"
            android:textSize="40px" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_two"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="40px"
            android:background="@drawable/icon_gril"
            android:padding="20px" />

        <TextView
            android:id="@+id/main_girl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="妹纸"
            android:textSize="40px" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_three"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="40px"
            android:background="@drawable/ic_toolbar_like_p"
            android:padding="20px" />

        <TextView
            android:id="@+id/main_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="收藏"
            android:textSize="40px" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_four"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="40px"
            android:background="@drawable/ic_about"
            android:padding="20px" />

        <TextView
            android:id="@+id/main_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="关于"
            android:textSize="40px" />


    </LinearLayout>


</LinearLayout>